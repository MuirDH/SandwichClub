<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Theme for the detail headers -->
    <style name="DetailHeaderTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/header_top_padding</item>
        <item name="android:paddingLeft">@dimen/header_left_padding</item>
        <item name="android:paddingRight">@dimen/header_right_padding</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">@dimen/header_textsize</item>
        <item name="android:typeface">sans</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Theme for the detail text -->
    <style name="DetailTextTheme">
        <item name="android:paddingTop">@dimen/detail_text_top_padding</item>
        <item name="android:paddingLeft">@dimen/detail_text_left_padding</item>
        <item name="android:paddingRight">@dimen/detail_text_right_padding</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>
